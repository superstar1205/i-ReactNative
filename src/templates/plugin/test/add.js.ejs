const test = require('ava')
const sinon = require('sinon')
const plugin = require('../plugin')

test('adds the proper npm module and component example', async t => {
  // spy on few things so we know they're called
  const addModule = sinon.spy()
  
  // mock an Ignite toolbox
  const toolbox = {
    ignite: { addModule }
  }

  await plugin.add(toolbox)
  
  t.true(addModule.calledWith('react-native-MODULENAME', { link: true, version: '0.0.1' }))
})
